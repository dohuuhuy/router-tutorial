{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    // "rootDir": ".",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@actionStore": ["src/store/actionStore"],
      "@interface": ["src/store/interface"],
      "@containers/*": ["./src/containers/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/utils/*"],
      "@templates/*": ["./src/components/templates/*"],
      "@components/*": ["./src/components/*"],
      "@componentStore/*": ["./src/store/componentStore/*"],
      "@assets/*": ["./src/common/assets/*"],
      "@public/*": ["./public/*"],
      "@store/*": ["./src/store/*"]
    }
  },

  "include": ["./src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
